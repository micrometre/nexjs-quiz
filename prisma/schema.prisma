datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Quiz {
  id        Int      @id @default(autoincrement())
  title     String
  questions Question[]
}

model Question {
  id        Int      @id @default(autoincrement())
  text      String
  quizId    Int
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  answers   Answer[]
}

model Answer {
  id          Int      @id @default(autoincrement())
  text        String
  isCorrect   Boolean
  questionId  Int
  question    Question @relation(fields: [questionId], references: [id])
}